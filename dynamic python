def fuzzy_union(set1, set2):
    # Find the minimum membership values between the two sets
    union_set = [min(set1[i], set2[i]) for i in range(len(set1))]
    return union_set

def main():
    # Get the number of elements in the fuzzy sets
    n = int(input("Enter the number of elements in the fuzzy sets: "))

    # Initialize the fuzzy sets
    set1 = []
    set2 = []

    # Get the membership values for the first fuzzy set
    print("Enter the membership values for the first fuzzy set:")
    for i in range(n):
        value = float(input(f"Element {i + 1}: "))
        set1.append(value)

    # Get the membership values for the second fuzzy set
    print("Enter the membership values for the second fuzzy set:")
    for i in range(n):
        value = float(input(f"Element {i + 1}: "))
        set2.append(value)

    # Calculate the union of the fuzzy sets
    union_set = fuzzy_union(set1, set2)

    # Display the union set
    print("The union of the fuzzy sets is:")
    for i, value in enumerate(union_set):
        print(f"Element {i + 1}: {value}")


if __name__ == '__main__':
    main()
